[libos]
entrypoint = "pruntime"

[loader]
preload = "file:{{ gramine.libos }}" # for compatibility with v1.0
entrypoint = "file:{{ gramine.libos }}"
log_level = "{{ log_level }}"
argv0_override = "pruntime"
insecure__use_cmdline_argv = true

[loader.env]
LD_LIBRARY_PATH = "/lib:/lib/x86_64-linux-gnu"
M_ARENA_MAX = "1"

[fs.mount.lib]
type = "chroot"
path = "/lib"
uri = "file:{{ gramine.runtimedir() }}"

[fs.mount.lib2]
type = "chroot"
path = "/lib/x86_64-linux-gnu"
uri = "file:/lib/x86_64-linux-gnu"

[fs.mount.data]
type = "chroot"
path = "/data"
uri = "file:./data"

[fs.mount.etc]
type = "chroot"
path = "/etc"
uri = "file:/etc"


[sgx]
debug = true
nonpie_binary = true
enclave_size = "4G"
thread_num = 32
remote_attestation = true
ra_client_linkable = true
ra_client_spid = "{{ ra_client_spid }}"

trusted_files = [
  "file:{{ gramine.libos }}",
  "file:pruntime",
  "file:{{ gramine.runtimedir() }}/",
  "file:/lib/x86_64-linux-gnu/",
]

allowed_files = [
  "file:/etc/hosts",
  "file:/etc/resolv.conf",
]

protected_mrenclave_files = [
  "file:data/",
]

